package au.edu.rmit.agtgrp.agtcity.sarl.agents.dummy

import io.sarl.core.Initialize
import io.sarl.core.Lifecycle

/** 
 * This agent will spawn several single SWISingleFullAgents, each of the managing some subset
 * of the players in the simulation

 * @author Sebastian Sardina (ssardina@gmail.com) * 
 */
agent BootMultiSWIAgents {
    uses Lifecycle

    on Initialize {
        spawn(SWISingleFullAgent, "team1", "conf/MultiAgents/", "eismassimconfig1.json", "agentsconfig1.json")
        spawn(SWISingleFullAgent, "team2", "conf/MultiAgents/", "eismassimconfig2.json", "agentsconfig2.json")
        killMe
    }
}



